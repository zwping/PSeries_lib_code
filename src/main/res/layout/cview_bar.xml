<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <win.zwping.code.review.PTextView
        android:id="@+id/title_ptv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#333"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/return_rl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="定义为：Return模块"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <win.zwping.code.review.PTextView
            android:id="@+id/return_txt_ptv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#333"
            android:textSize="12dp" />

        <win.zwping.code.review.PImageView
            android:id="@+id/return_img_piv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <win.zwping.code.cview.ArrowView
            android:id="@+id/return_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            app:p_arrow_width="2dp"
            app:p_direction="left" /> <!--无法有效预览??-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="定义为：Menu模块"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintRight_toRightOf="parent">

        <win.zwping.code.review.PTextView
            android:id="@+id/menu_txt_ptv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#333"
            android:textSize="12dp" />

        <win.zwping.code.review.PImageView
            android:id="@+id/menu_img_piv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>