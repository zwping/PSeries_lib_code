<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <win.zwping.code.review.PImageView
        android:id="@+id/title_icon_piv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/title_icon_piv"
        app:layout_constraintRight_toLeftOf="@id/arrow_v">

        <win.zwping.code.review.PTextView
            android:id="@+id/title_ptv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15dp" />

        <win.zwping.code.review.PEditText
            android:id="@+id/content_input_ptv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/title_ptv"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp" />

        <win.zwping.code.review.PTextView
            android:id="@+id/content_ptv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/title_ptv"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12dp" />
    </RelativeLayout>

    <win.zwping.code.cview.ArrowView
        android:id="@+id/arrow_v"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/top_line_v"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <View
        android:id="@+id/bottom_line_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>