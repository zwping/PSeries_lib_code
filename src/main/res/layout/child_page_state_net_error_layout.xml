<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/page_state_no_network" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:text="@string/page_state_no_network_text"
        android:textColor="@color/page_state_text_gray"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/page_state_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_retry_btn_selector"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp10"
        android:paddingRight="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:text="@string/page_state_retry_text"
        android:textColor="@color/page_state_loading_dialog_message"
        android:textSize="@dimen/sp15" />

</LinearLayout>